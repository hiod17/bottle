.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.detail-image {
  width: 100%;
  height: 300px;
  border-radius: 10px;
  margin-bottom: 20px;
}

.detail-info {
  width: 100%;
  padding: 10px;
}

.info-wrapper {
  margin-bottom: 15px;
  margin-left: 15px;
}
.label {
  display: block;
  margin-bottom: 5px;
}

.value {
  width: 80%;
  height: 40px;
  padding: 0 10px;
  box-sizing: border-box;
  font-size: 20px;
  color: black;
}

.detail-text {
  font-size: 16px;
  color: #333;
  margin-bottom: 10px;
}

