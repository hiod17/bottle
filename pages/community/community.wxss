/**index.wxss**/
.form-wrapper {
  padding: 10px;
}
.registration-title {
  text-align: center; 
  font-size: 24px; /* Modify font size as needed */
  display: block; /* Ensure the title takes up its own line */
  margin-bottom: 20px; /* Add some spacing below the title */
}
/* 可滚动视图样式 */
.scroll-view {
  flex: 1;
  padding: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;  /* 确保内容水平居中 */
}

/* 卡片样式 */
.card {
  width: 90%;  /* 控制卡片的宽度 */
  max-width: 600px;  /* 设置卡片的最大宽度 */
  background-color: #ffffff;
  border-radius: 10px;
  margin-bottom: 10px;
  padding: 10px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.card-image {
  width: 100%;
  height: 200px;
  border-radius: 10px;
  margin-bottom: 10px;
}

.card-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5px;
}

.card-description {
  font-size: 14px;
  color: #666;
}





