<image src="/icons/global-icon.png" class="global-icon"></image>
<view class="form-wrapper">
  <!-- 修改密码 -->
  <text class="registration-title">修改密码</text>
  
  <!-- 原密码输入框 -->
  <view class="input-wrapper">
    <text class="label">原密码</text>
    <input type="text" class="input" placeholder="请输入原密码" bindinput="onUsernameChange" />
  </view>

  <!-- 新密码输入框 -->
  <view class="input-wrapper">
    <text class="label">新密码</text>
    <input type="password" class="input" placeholder="设置新密码" bindinput="onPasswordChange" />
  </view>

  <!-- 确认密码输入框 -->
  <view class="input-wrapper">
    <text class="label">确认密码</text>
    <input type="password" class="input" placeholder="确认密码" bindinput="onConfirmPasswordChange" />
  </view>

  <!-- 确认按钮 -->
  <button class="register-btn" bindtap="onRegister">确认修改</button>
</view>