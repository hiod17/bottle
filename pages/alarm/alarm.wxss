/**index.wxss**/
.alarm-icon {
  display: block;
  margin: 20px auto; /* 上下边距为 20px, 水平居中 */
  width: 90px; /* 图标宽度 */
  height: 90px; /* 图标高度 */
  background-image: url('icons/alarm.png'); /* 图标路径 */
  background-size: cover; /* 确保图标覆盖整个元素 */
  border-radius: 20%; /* 添加圆角效果，50% 会创建一个完美的圆形 */
}

.form-wrapper {
  padding: 10px;
}

.registration-title {
  text-align: center; 
  font-size: 20px; /* Modify font size as needed */
  display: block; /* Ensure the title takes up its own line */
  margin-bottom: 20px; /* Add some spacing below the title */
}

.input-wrapper {
  margin-bottom: 15px;
  margin-left: 15px;
}

.label {
  display: block;
  margin-bottom: 5px;
}

.send-code-btn {
  display: flex;
  margin-left: 10px;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
  width: 50%;
  height: 40px;
  padding: 0 10px;
  box-sizing: border-box;
}

.input{
  width: 80%;
  height: 40px;
  padding: 0 10px;
  box-sizing: border-box;
}
.usernameinput{
  width: 80%;
  height: 40px;
  padding: 0 10px;
  box-sizing: border-box;
}
.input-btn-wrapper {
  display: flex;
  align-items: center; /* 垂直居中对齐输入框和按钮 */
}

.code-wrapper {
  display: flex;
  align-items: center;
}

.code-input {
  flex: 1;
}

.send-code-btn {
  margin-right: 15px;
  width: 150px; /* Adjust width as needed */
  flex-shrink: 0;
}

.center-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60px;
  margin-bottom: 40px;
}
.post-btn {
  
  background-color: #007aff;
  width: 200px; /* Adjust width as needed */
  height: 40px; /* Adjust height as needed */
  font-size: 16px; /* Adjust font size as needed */
  color: white;
  border: none;
  border-radius: 5px;
  margin-top: 8px;
}

.spacer {
  height: 20px; /* 创建一个高度为20px的空白区域 */
}

.forget-btn {
  text-align: center;
  display: block;
  margin-top: 8px;
  text-decoration: underline;
  color: black;
}



