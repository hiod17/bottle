/**index.wxss**/
.form-wrapper {
  padding: 10px;
}
.registration-title {
  text-align: center; 
  font-size: 24px; /* Modify font size as needed */
  display: block; /* Ensure the title takes up its own line */
  margin-bottom: 10px; /* Add some spacing below the title */
  margin-top: 30px;
}
.swiper {
  width: 100%;  
  height: 250px; 
  border-radius: 15px; /* 设置圆角 */
  overflow: hidden; /* 隐藏超出圆角部分的内容 */
}
.swiper-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 15px; /* 图片圆角，确保与swiper容器圆角一致 */
}


/* 按钮布局样式 */
.button-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;  /* 水平居中 */
  align-items: center;      /* 垂直居中 */
  width: 100%;
  margin-top: 50px;
}

/* 按钮样式 */
.button-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 45%;
  margin-bottom: 100px;
}

.button-icon {
  margin-bottom: 8px;
}

.button-text {
  font-size: 14px;
  color: #333;
}

/* 按钮布局样式 */
.button-grid-line {
  display: flex;
  justify-content: space-between;  /* 水平等间距排列按钮 */
  align-items: center;      /* 垂直居中 */
  width: 100%;  /* 设置按钮容器的宽度，确保按钮不会紧贴屏幕边缘 */
}

/* 按钮样式 */
.button-item-line {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 22%;  /* 控制按钮宽度使其在一行中居中 */
}




