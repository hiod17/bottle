<image src="/icons/global-icon.png" class="global-icon"></image>
<view class="form-wrapper">
  <!-- 欢迎注册 -->
  <text class="registration-title">欢迎登录</text>
  
  <!-- 用户名输入框 -->
  <view class="input-wrapper">
    <text class="label">用户名</text>
    <input type="text" class="input" placeholder="请输入用户名" bindinput="onUsernameChange" />
  </view>

  <!-- 邮箱输入框 -->
  <view class="input-wrapper">
    <text class="label">邮箱</text>
    <input type="text" class="input" placeholder="请输入邮箱" bindinput="onEmailChange" />
  </view>

  <!-- 密码输入框 -->
  <view class="input-wrapper">
    <text class="label">密码</text>
    <input type="password" class="input" placeholder="请输入密码" bindinput="onPasswordChange" />
  </view>

  <!-- 注册按钮 -->
  <button class="login-btn" bindtap="onLogin">登录</button>
  <text class="forget-btn" bindtap="onForgot">忘记密码？</text>
  <text class="register-btn" bindtap="onRegister">未有账户？去注册-></text>
</view>